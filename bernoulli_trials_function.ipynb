   "source": [
    "def perform_bernoulli_trials(n, p):\n",
    "    n_successes = 0\n",
    "    for _ in range(n):\n",
    "        num = np.random.random()\n",
    "        if num < p:\n",
    "            n_successes += 1\n",
    "    return n_successes"
   ]
  },
